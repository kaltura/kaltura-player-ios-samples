# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'OVPSample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!


#  pod 'KalturaPlayer/OVP'
  pod 'KalturaPlayer/OVP', :git => 'https://github.com/kaltura/kaltura-player-ios.git', :branch => 'FEC-10389'
#  pod 'KalturaPlayer/OVP', :path => '../../kaltura-player-ios'


  ## In case we want to add IMA (Interactive Media Ads)
  pod 'PlayKit_IMA'
#  pod 'PlayKit_IMA', :git => 'https://github.com/kaltura/playkit-ios-ima.git', :branch => 'develop'
#  pod 'PlayKit_IMA', :path => '../../playkit-ios-ima'


  ## In case we want to add Youbora
  pod 'PlayKitYoubora'
#  pod 'PlayKitYoubora', :git => 'https://github.com/kaltura/playkit-ios-youbora.git', :branch => 'develop'
#  pod 'PlayKitYoubora', :path => '../../playkit-ios-youbora'


  ## In case we want Offline content (can replace: pod 'KalturaPlayer/OVP')
#  pod 'KalturaPlayer/Offline_OVP'
  pod 'KalturaPlayer/Offline_OVP', :git => 'https://github.com/kaltura/kaltura-player-ios.git', :branch => 'FEC-10389'
#  pod 'KalturaPlayer/Offline_OVP', :path => '../../kaltura-player-ios'

#  pod 'PlayKitProviders', :path => '../../playkit-ios-providers'
pod 'PlayKitProviders',  :git => 'https://github.com/kaltura/playkit-ios-providers.git', :branch => 'develop'

  ## In case we want to add Google Chrome Cast
  pod 'PlayKitGoogleCast'
#  pod 'PlayKitGoogleCast', :git => 'https://github.com/kaltura/playkit-ios-googlecast.git', :branch => 'develop'
#  pod 'PlayKitGoogleCast', :path => '../../playkit-ios-googlecast'

end
